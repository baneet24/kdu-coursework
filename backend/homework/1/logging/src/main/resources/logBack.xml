<configuration>
<appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>log.txt</file>
    <append>true</append>
    <encoder>
        <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
</appender>

<root level="TRACE">
    <appender-ref ref="FILE" />
</root>
</configuration>
